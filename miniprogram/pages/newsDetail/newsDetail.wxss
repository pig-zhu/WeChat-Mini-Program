/* miniprogram/pages/newsDetail/newsDetail.wxss */
.title{
  font-size: 40rpx;
  font-weight: 700;
}
.time{
  color: #555;
  font-size: 28rpx;
}
.myIcon{
  /* vertical-align: text-bottom; */
  margin: 0 5rpx 0 20rpx;
}
.header{
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
}
.author{
  max-width: 280rpx;
}
.sandian{
  max-width:280rpx;
  overflow:hidden;
  display:block;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.qianyan{
  width: 100%;
  background-color: rgb(238, 240, 244);
  height: 150rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
}
.line{
  height: 100%;
  width: 10px;
  background-color: rgb(221, 223, 228);
  float: left;
  margin-right: 20rpx;
}
.detail{
  margin-top: 30rpx;
  text-indent: 2rem;
}